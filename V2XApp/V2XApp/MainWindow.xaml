<Window x:Class="V2XApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="V2X Demo App" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Quadrant 1 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="20" Background="LightGray">
            <TextBlock x:Name="Title1" Text="Emergency Electronic Brake Lights (EEBL):"
                       FontSize="32" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="Status1" Text="Not received" FontSize="28" Margin="10"/>
            <Button Content="Trigger EEBL" FontSize="24" Padding="10" Margin="10" Click="Button1_Click"/>
        </StackPanel>

        <!-- Quadrant 2 -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="20" Background="LightGray">
            <TextBlock x:Name="Title2" Text="Reduced Speed Zone Warning (RSZW):"
                    FontSize="32" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="Status2" Text="Not received" FontSize="28" Margin="10"/>
            <Button Content="Trigger RSZW" FontSize="24" Padding="10" Margin="10" Click="Button2_Click"/>
        </StackPanel>


        <!-- Quadrant 3 -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20" Background="LightGray">
            <TextBlock x:Name="Title3" Text="Var3:" FontSize="32" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="Status3" Text="Not received" FontSize="28" Margin="10"/>
            <Button Content="Trigger Var3" FontSize="24" Padding="10" Margin="10" Click="Button3_Click"/>
        </StackPanel>

        <!-- Quadrant 4 -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20" Background="LightGray">
            <TextBlock x:Name="Title4" Text="Var4:" FontSize="32" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="Status4" Text="Not received" FontSize="28" Margin="10"/>
            <Button Content="Trigger Var4" FontSize="24" Padding="10" Margin="10" Click="Button4_Click"/>
        </StackPanel>
    </Grid>
</Window>
